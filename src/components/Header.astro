---
interface Props {
	step: string,
    act:string
}
const { step,act } = Astro.props;
---
<div class="header">
    <div class="info">
        <div class="header-title"><span class="big-text">GUARDIANS</span><span class="small-text">OF THE</span><span class="big-text"><strong>RAINFOREST</strong></span></div>
        <div class="progress-wrapper">
            <div class="current-progress"></div>    
            <img class="progress-wedge" src="./imgs/progress/progress-wedge.png" />
        </div>        
    </div>
    <div class="settings">
        <a id="settings-button" href="#">
            <img src="./imgs/settingsButton.png">
        </a>
    </div>
</div>

<style>

    .progress-wrapper{
        background-color: #00A5DC;
        border-radius: 4px;
        width: 100%;
        opacity: 0;
        height:8px;
    }

    .current-progress{
        height:inherit;
        width: 0%;
        background-color: #6FDB8F;
        border-radius: 4px;
    }

    .background-progress{
        
        position: relative;
    }

    .progress-wedge {
        width: 10px;
        position: relative;
        top:-4px;
        left:-4px;
    }

    .header {
        --color-blue:#064796;
        display: grid;
        grid-template-areas: 'info';
        grid-template-columns: auto;
        grid-template-rows: 34px;
        margin: 15px 15px;
        gap: 7px;
        font-family: 'Roboto', sans-serif;
        color:white;
        
    }

    .info{
        padding: 10px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: 0 auto;
        gap:5px;
    }



    .header-title {
        float:left;
        margin-top: 0px;
        font-size: 18px;
        display: flex;
        gap:7px;
        transition: all 0.5s ease-out;
        position: relative;
        top: 8px;
    }

    .header-title-up {
        top: 0px;
    }

    .small-text {
        font-size:13px;
        margin-top: 4px;
    }

    .header-act {
        float: right;
        margin-top: -4px;
        font-size: 16px;
        font-weight: bold;
    }

    .settings{
        position: absolute;
        left: 88%;
        top: 13px;
    }

    @media (max-width: 500px) {
        .header-title {
            font-size: 13px;            
        }

        .small-text{
            font-size:10px;
            margin-top: 2px;
        }

        .header {
            margin: 13px 15px;
        }

        
    }
</style>