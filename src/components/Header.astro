---
interface Props {
	step: string,
    act:string
}
const { step,act } = Astro.props;
---
<div class="header">
    <div class="info">
        <div class="header-title"><span class="big-text">GUARDIANS</span><span class="small-text">OF THE</span><span class="big-text"><strong>RAINFOREST</strong></span></div>        
    </div>
    <div class="settings"><img src="./imgs/settingsButton.png"></div>
</div>

<style>
    .header {
        --color-blue:#064796;
        display: grid;
        grid-template-areas: 'info settings';
        grid-template-columns: auto 34px;
        grid-template-rows: 34px;
        margin: 15px 15px;
        gap: 7px;
        font-family: 'Roboto', sans-serif;
        color:white;
        opacity:0;
    }

    .info{
        grid-area: info;
        padding:10px;
        display: flex;
        justify-content: center;
        /*width: 100%;*/
    }



    .header-title {
        float:left;
        margin-top: -4px;
        font-size: 20px;
        display: flex;
        gap:7px;
    }

    .small-text {
        font-size:15px;
        margin-top: 4px;
    }

    .header-act {
        float: right;
        margin-top: -4px;
        font-size: 16px;
        font-weight: bold;
    }

    .settings{
        grid-area: settings;
    }
</style>