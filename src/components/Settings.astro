<div id="settings-panel" class="settings-hide">
    <div class="settings-wrapper">
        <div class="header">
            <a id="close-settings-button" href="#">
                <img src="./imgs/settings/closeSettings.png" id="closeSettings">
            </a>
        </div>
        <div class="content-settings">
            <div class="title">Settings</div>
            <div class="sound-options">
                <!-- Creatre two checkboxes -->
                <label class="form-control music-label">
                    <input checked id="music-checkbox" type="checkbox" name="music" />
                    Music
                </label>
                <label class="form-control">
                    <input checked id="sound-checkbox" type="checkbox" name="sound" />
                    Sound FX
                </label>
            </div>
            <div>
                <a href="#" id="button-reload" class="button-exit">
                    <div class="reset-title">Exit / Reset</div>
                    <div class="reset-description">All progress will be lost</div>
                </a>
            </div>
            <!--<div id="version"></div>
             <div id="stored-version"></div>-->
        </div>
    </div>
    
</div>
<script>
    const version = "0.0.1";
    const storedVersion = localStorage.getItem("version");
   
    console.log("version " + version)
    if(storedVersion !== version){
        localStorage.clear();
        localStorage.setItem("version", version);

        // Aquí el flush y carga de nuevo
        // console.log("Aquí el flush y carga de nuevo");
        // window.location.reload(true)
    }

    // document.getElementById("version").innerHTML = "Version: " + version;
</script>
<style>
    #settings-panel {
        position: absolute;
        top:0px;
        left:0px;
        width: 100%;
        height: 100%;
        z-index: 10; 
        background-color: rgba(0, 0, 0, 0.65);
        color:#054696;
        font-size: 14px;
        font-family: 'Roboto', sans-serif;
    }

    .settings-wrapper{
        background-color: #9EC0CC;
        border-radius: 8px;
        margin:30px 20px;
        height: auto;
    }

    .settings-hide{
        display: none !important;
    }

    #closeSettings {
        width: 40px;
    }

    #close-settings-button {
        float: right;
        margin-right: 10px;
        margin-top: 10px;
    }
    .title {
        padding:10px 25px;
        border-bottom: 2px solid white;
        margin: 10px 20px;
        text-transform: uppercase;

    }

    .content-settings {
        padding:30px 10px 10px 10px;
        text-align: center;
        font-weight: bold;
        font-size: 16px;
        
    }

    .sound-options{
        background-color: #B6D0D9;
        width: 50%;
        padding: 30px 30px;
        font-size:25px;
        margin: 40px auto;
    }

    .sound-options label {
        display: flex;
        flex-direction: column;
        gap:10px;
        
    }


    .button-exit {
        background-color: #D93600;
        color: white;
        display: block;
        border-radius: 5px;
        border: 2px solid white;
        margin: 10px 30px;
        padding: 20px 10px;
        text-decoration: none;
    }

    .reset-title {  
        font-size: 25px;
    }

    .reset-description{
        font-size: 18px;
        font-weight: normal;
    }

    .sound-options input[type="checkbox"] {
        appearance: none;
        -webkit-appearance: none;
        display: flex;
        align-content: center;
        justify-content: center;
        font-size: 2rem;
        padding: 0.1rem;
        border: 3px solid white;
        border-radius: 0.5rem;
        background-color:#5D8BB7;
    }

    .sound-options input[type="checkbox"]:checked {
        background-color:#054696;
    }

    .sound-options input[type="checkbox"]::before {
        content: "";
        width: 1.4rem;
        height: 1.4rem;
        transform: scale(0);
        background-color: #1CAD4B;
        transform-origin: bottom left;
        clip-path: polygon(14% 44%, 0 65%, 50% 100%, 100% 16%, 80% 0%, 43% 62%);
        margin-top: 8px;
    }

    .sound-options input[type="checkbox"]:checked::before {
        transform: scale(1);
    }

    .sound-options input[type="checkbox"]:hover {
        color: black;
    }

    .music-label {
        margin-bottom:30px;
    }

    .sound-options input {
        width: 50px;
        height: 50px;
        margin: 0 auto;
    }

    @media (max-width: 500px) {
        .sound-options{
            width: 80%;
            padding: 15px 15px;
            font-size:25px;
            margin: 20px auto;
        }

        .sound-options::before{
            margin-top: 13px;
        }

    }


</style>