---
import NextButton from '../components/buttons/NextButton.astro';
import QuestionHeader from '../components/QuestionHeader.astro';
import Punctuation from '../components/Punctuation.astro';

interface Props {
	step: string;
}
import { imageURL } from '../../public/scripts/helpers/ImageURL';
// const companiesBorderURL = imageURL("imgs/companies/border/companies-border.png")


const { step } = Astro.props;

---
<div class=`content-holder`>
    <div class="info">
        <div class=`title-step-${step}`>
            <QuestionHeader character="sarah">
                As entrepreneurs, we need to <strong>lead and inspire</strong> other team members.
            </QuestionHeader>   
        </div>
    </div>
    <div class="info-holder">
        <div id="question-holder">
            <div class="info-question">
                <div class="question-text">Which crucial skill do we have to master to foster a positive work culture, and propel our ventures to success?</div>
                <div class="answers">
                    <a class=`answer btn-step-${step}-option` id=`step-${step}-answer-button-1` href="#">Influential negotiation and persuasive abilities</a>
                    <a class=`answer btn-step-${step}-option` id=`step-${step}-answer-button-2` href="#">Adaptive leadership and change management</a>
                    <a class=`answer btn-step-${step}-option` id=`step-${step}-answer-button-3` href="#">Intuitive market intuition and trend forecasting</a>
                    <a class=`answer btn-step-${step}-option` id=`step-${step}-answer-button-4` href="#">Proficient multitasking and time management</a>
                </div>
            </div>
        </div>
        <div id="result-holder">
            <div class="result-holder">
                <div class="question-9-explanation">Every business faces multiple challenges, so being flexible and adapting to context will be your best skill!</div>
                <div class="visual-result">
                    <div class="visual-result-left">
                        <img style="opacity:0"  src="./imgs/correct.png">
                    </div>
                    <div class="result-title visual-result-center">
                        Adaptive leadership and change management 
                    </div>
                    <div class="visual-result-right">
                        <img id="visual-result-mark" src="./imgs/correct.png">
                    </div>
                </div>        
            </div>
        </div>        
    </div>
    <Punctuation step={step}/>
    <div class="next-button-wrapper">
        <NextButton step={step}/>
    </div>
</div>
<style>
    .content-holder {
        position:relative;
        --text-blue:#14519C; 
        --color-blue:#044596;
        color:darkblue;
        text-align: center;
        font-size: 14px;
        margin:20px 20px;
        font-family: 'Roboto', sans-serif;
        overflow: hidden;
    }

    h1 {
        font-size: 15px;
        font-weight: 400;
    }

    .info-holder {
        display: grid;
        grid-template-columns: 100% 100%;
        gap:30px;
        margin-bottom: 30px;
        /*transform: translateX(-328px);*/
    }   

    .info-holder > div{
        /*border:1px solid red;*/
    }

    .info-grid{
        display: grid;
        grid-template-columns: 1fr auto 1.5fr;
        grid-template-areas: 'picture wedge text';
        margin-bottom: 20px;
    }

    .info-picture{
        grid-area: picture;
        display: flex;
    }

    .info-picture img{
        align-self: flex-end;
    }

    .info-wedge{
        grid-area: wedge;
    }

    .info-wedge img{
       position: relative;
       top: 40%;
       left:2px;
    }

    .info-text{
        grid-area: text;
        border: 2px solid #C1D1E5;
        border-radius: 2px;
        padding: 15px;
    }

    .info-question{
        grid-area: question;
        margin: 0px 15px;
    }

    .question-text {
        padding:0px;
        margin: 0 10px;
        text-align: left;
        color:#054696;
        font-size: 14px;
    }

    .answers {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        gap: 20px;
        margin-top: 20px;
    }

    .answers .btn-step-option-selected{
        background-color:var(--color-blue);
        color:white;
    }

    .answer {
        background-color: white;
        border:2px solid var(--color-blue);
        border-radius: 8px;
        color:var(--color-blue);
        font-size: 14px;
        padding:15px 6px;
        text-decoration: none;
    }

    .result-holder {
        display: flex;
        flex-direction: column;
        margin: 0px 30px;
    }

    .visual-result {
        display: flex;
        flex-direction: row;
        justify-content:center;
        margin-bottom: 10px;
    }

    .visual-result-left{
        width: 20%;
    }

    .visual-result-center{
        width: auto;
        padding: 10px 0px;
    }

    .visual-result-center img {
        width: 55%;
    }

    .visual-result-right{
        width: 20%;
        align-self: center;
    }

    #visual-result-mark {
        padding:0 5px;
    }

    .result-title {
        background-color: #C9EBD4;
        font-size:16px;
        border-radius:10px;
        padding: 15px 15px;
        margin-bottom: 10px;
        color:#054696;
        border:2px solid #044596;
    }

    .result-title-wrong {
        background-color: #FFD8DB !important;
    }

    .result-sentence {
        font-size:17px;
        margin-bottom: 30px;
    }

    /* In Css how are all the paragraphs that descend from .result-sentence? */
    .result-paragraph  {
        padding:0px;
        margin:0px;
    }

    /*
    .user-name {
        color:#EB590A;
    }
    */

    .result-description{
        text-align: left;
    }

    .next-button-wrapper{
        padding-top: 20px;
    }

    .question-9-explanation {
        text-align: left;
        color:#054696;
        margin-bottom:30px;
    }


</style>