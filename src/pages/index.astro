---
import Layout from '../layouts/Layout.astro';
import Step from '../components/Step.astro';
import QuestionSet from '../components/QuestionSet.astro';
import ContentDraggable from '../components/ContentDraggable.astro';
import ContentMultiple from '../components/ContentMultiple.astro'
import Form from '../components/Form.astro';
---

<Layout title="German School">
	<div class="container" draggable="false">
		<div id="root" class="holder">
			<div id="content" class="content">
				<Step step="0">
					<ContentDraggable step='0'/>
				</Step>
				<Step step="1">
					<ContentMultiple step="1"/>
				</Step>
				<Step step="2">
					<Form />
				</Step>
			</div>
			
		</div>
		
	</div>
</Layout>
<style is:global>
	
	:root {
    	--radius: 15px;
    	--marginGeneral: 10%;
    	--color-alternate: orange;
    	--color-correct: green;
	}

	.hide {
		display: none;
	}

	body {
		margin: 0;
		padding:0;
	}

	@font-face {
		font-family: 'Roboto';
		src: url('/fonts/Roboto-Regular.ttf') format('ttf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}


	.noselect {
		-webkit-touch-callout: none; /* iOS Safari */
		-webkit-user-select: none; /* Safari */
		-khtml-user-select: none; /* Konqueror HTML */
		-moz-user-select: none; /* Old versions of Firefox */
		-ms-user-select: none; /* Internet Explorer/Edge */
		user-select: none; /* Non-prefixed version, currently
									supported by Chrome, Edge, Opera and Firefox */
	}

	.container {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		height: 100svh;
		width: 100vw;
		background-color: black;
		overflow:hidden;

	}

	.holder {
		position: relative;
		border-radius:var(--radius);
		height: calc(100% - var(--marginGeneral));
		width: calc(100% - var(--marginGeneral));
		max-width: 448px;
		max-height: 800px;
		overflow:hidden;
		
	}

	.content {
		position: absolute;
		left:0px;
		display: flex;
		align-items: center;
		height: 100%;
		width: 100%;		
	}

	.step {
		min-width: 100%;
		height: 100%;
		background-color: white;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
	}

	.stepOrange{
		background-color: orange !important;
	}

</style>

