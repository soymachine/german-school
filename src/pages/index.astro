---
import Layout from '../layouts/Layout.astro';
import Step from '../components/Step.astro';
import TravelStep from '../components/TravelStep.astro';
import AvatarStep from './AvatarStep.astro';
import FlowDiagramStep from './FlowDiagramStep.astro';
import StartupsStep from './StartupsStep.astro'
import FinancialMetric from './FinancialMetric.astro'
import TravelToManausStep from './TravelToManausStep.astro'
import WhyEnterpreneurStep from './WhyEnterpreneurStep.astro'
import Form from '../components/Form.astro';
import ElevatorPitchStep from './ElevatorPitchStep.astro';
import PatagoniaStep from './PatagoniaStep.astro';
import SocialMediaStep from './SocialMediaStep.astro';
import ActTitleStep from './ActTitleStep.astro';
import ValuesStep from './ValuesStep.astro';
import Congrats from './Congrats.astro';
import PointsExplanation from './PointsExplanation.astro';
import SarahQuestion9 from './SarahQuestion9.astro';
import SarahQuestion10 from './SarahQuestion10.astro';
import Act1_Cinematics from './acts/Act1_Cinematics.astro';
import Act4_Cinematics from './acts/Act4_Cinematics.astro';
import Act1_SarahApproves from './acts/Act1_SarahApproves.astro';
import Act2_Cinematics from './acts/Act2_Cinematics.astro';
import Act2_PreQuestion from './acts/Act2_PreQuestion.astro';
import Act3_Cinematics from './acts/Act3_Cinematics.astro';
import Act3_AlexAfterIA from './acts/Act3_AlexAfterIA.astro';
import Act4_Cinematics_After9 from './acts/Act4_Cinematics_After9.astro';
import Intro from './Intro.astro';
import Header from '../components/Header.astro';
import BusinessStep from './BusinessStep.astro';
import Footer from '../components/Footer.astro';
import PrologueCinematics from './acts/Prologue_Cinematics.astro';
---
<Layout title="Guardians of the Rainforest | WHU">
	<div class="container" draggable="false">
		<div id="root" class="holder">
			<div class="sticky-header">
				<Header step={"0"} act={"I"}/>
			</div>
			<div id="content" class="content">
				<Step step="0">
					<Intro step='0'/>
				</Step>
				<Step step="1">
					<AvatarStep step='1'/>
				</Step>
				<Step step="2">
					<SocialMediaStep step='2'/>
				</Step>
				<Step step="3">
					<ActTitleStep act={1} label='The Call for Adventure' step="3"/>
				</Step>
				<Step step="4">
					<Act1_Cinematics step='4'/>
				</Step>
				<Step step="5">
					<WhyEnterpreneurStep step="5" />
				</Step>
				<Step step="6">
					<BusinessStep step="6" />
				</Step>
				<Step step="7">
					<Act1_SarahApproves step="7" />
				</Step>
				<Step step="8">
					<ActTitleStep act={2} label='The Journey begins' step="8"/>
				</Step>
				<TravelStep step="9" act="III">
					<TravelToManausStep step="9" />
				</TravelStep>
				<Step step="10">
					<Act2_Cinematics step='10'/>
				</Step>
				<Step step="11">
					<StartupsStep step="11"/>
				</Step>
				<Step step="12">
					<FinancialMetric step="12" />
				</Step>
				<Step step="13">
					<Act2_PreQuestion step="13" />
				</Step>
				<Step step="14">
					<ValuesStep step="14" />
				</Step>
				<Step step="15">
					<ActTitleStep act={3} label='The Trials' step="15"/>
				</Step>
				<Step step="16">
					<Act3_Cinematics step='16'/>
				</Step>
				<Step step="17">
					<FlowDiagramStep step='17'/>
				</Step>
				<Step step="18">
					<Act3_AlexAfterIA step='18'/>
				</Step>
				<Step step="19">
					<PatagoniaStep step="19" />
				</Step>
				<Step step="20">
					<ElevatorPitchStep step="20" />
				</Step>
				<Step step="21">
					<ActTitleStep act={4} label='The Reward' step="21"/>
				</Step>
				<Step step="22">
					<Act4_Cinematics step='22'/>
				</Step>
				<Step step="23">
					<SarahQuestion9 step='23'/>
				</Step>
				<Step step="24">
					<Act4_Cinematics_After9 step='24'/>
				</Step>
				<Step step="25">
					<SarahQuestion10 step='25'/>
				</Step>
				<Step step="26">
					<ActTitleStep act={5} label='The next chapter' step="26"/>
				</Step>
				<Step step="27">
					<PrologueCinematics step='27'/>
				</Step>
				<Step step="28">
					<Congrats step='28'/>
				</Step>
				<Step step="29">
					<PointsExplanation step='29'/>
				</Step>
				<!-- subect TO CHANGE -->
				<Step step="29">
					<Form />
				</Step>
			</div>
			<div class="sticky-footer">
				<Footer />
			</div>
		</div>
		
	</div>
</Layout>
<style is:global>
	
	:root {
    	--radius: 15px;
    	--marginGeneral: 0%;
    	--color-alternate: orange;
    	--color-correct: green;
	}

	p {
		margin:0;
		padding:0;
	}

	.hide {
		display: none;
	}

	body {
		touch-action: none;
		margin: 0;
		padding:0;
	}

	@font-face {
		font-family: 'Roboto';
		src: url('/fonts/Roboto-Regular.ttf') format('ttf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}


	.noselect {
		-webkit-touch-callout: none; /* iOS Safari */
		-webkit-user-select: none; /* Safari */
		-khtml-user-select: none; /* Konqueror HTML */
		-moz-user-select: none; /* Old versions of Firefox */
		-ms-user-select: none; /* Internet Explorer/Edge */
		user-select: none; /* Non-prefixed version, currently
									supported by Chrome, Edge, Opera and Firefox */
	}

	.container {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		height: 100svh;
		width: 100vw;
		background-color: black;
		overflow:hidden;

	}

	.holder {
		position: relative;
		/*border-radius:var(--radius);*/
		height: calc(100% - var(--marginGeneral));
		width: calc(100% - var(--marginGeneral));
		max-width: 448px;
		max-height: 800px;
		overflow:hidden;
		background-color: white;
	}

	.content {
		position: absolute;
		left:0px;
		display: flex;
		align-items: center;
		height: 100%;
		width: 100%;		
	}

	.step {
		min-width: 100%;
		height: 100%;
		background-color: white;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
	}

	.stepOrange{
		background-color: orange !important;
	}

	.user-name {
        color:#EB590A;
		font-weight: bold;
    }

	.sticky-header {
		position: absolute;
		top: 0;
		z-index:1;
		width: 100%;
		display:grid;
		background-color: #054696;
		opacity:0;
	}

	.sticky-footer {
		width: 100%;
		position: absolute;
		bottom: 0px;
		height: 35px;
		opacity:0;
	}

</style>

