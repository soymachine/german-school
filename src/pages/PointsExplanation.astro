---
import NextButton from '../components/buttons/NextButton.astro';
import QuestionHeader from '../components/QuestionHeader.astro';
import Avatar from '../components/avatar/Avatar.astro';
interface Props {
	step: string;
}

const { step } = Astro.props;
---
<div class=`holder-congrats`>
    <div class="header">
        <div class="header-left"></div>
        <div class="header-avatar">
            <div id="avatar">
                <Avatar width={140} step={step} hasText={false} isSpeech={true}/>
            </div>
            
        </div>
        <div class="header-points">
            <div class="score-points">
                <div class="score-points-total">200</div>
                <div class="score-points-label">points</div>
            </div>
        </div>
    </div>
    <div class="header-explanation-label">
        <div class="punctuation-description">Eco-Enterpreneur</div>
    </div>
    <div class="explanation">
        <div class="explanation-label">
            <p class="explanation-description">Your insightful answers and strategic thinking have showcased your remarkable entrepreneurial power. Your vision, and determination to drive positive change in the business world is exactly what is needed to create a sustainable business that makes our world a better place.</p>
        </div>    
    </div>
   
    
    <NextButton step={step}/>
</div>
<style >

    .holder-congrats {
        color:#054696;
        text-align: center;
        font-size: 18px;
        margin:20px 10px;
        font-family: 'Roboto', sans-serif;
        overflow: hidden;
        position: relative;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .title {
        margin-bottom: 60px;
    }
    
    .characters {
        display: flex;
        flex-direction: row;
        border-bottom: 2px solid #82A2CA;
        align-items: flex-end;
        margin: 0 20px 50px 20px;
    }

    .score-label{
        display: flex;
        flex-direction: column;
        margin: 0 20px;
        color: #054696;
    }

    .score-label-second {
        font-weight: bold;
        font-size: 16px;
    }

    .header {
        display: grid;
        grid-template-columns: 1fr 2fr 1fr;
    }

    .header-points {
        display: flex;
        flex-direction: column;
        /* padding: 10px 10px; */
        position: relative;
        height: 120px;
    }

    .score-points {
        text-align: center;
        color: white;
        background-color: #EB590A;
        display: flex;
        flex-direction: column;
        padding: 10px 20px;
        border-radius: 10px;
    }

    .score-points-total {
        font-size: 28px;
        font-weight: bold;
    }

    .score-points-label{
        font-size: 20px;
    }

    .explanation-label{
        line-height: 1.4em;
    }

    .explanation-title {
        margin-bottom: 10px;
    }


    .punctuation-description {
        background-color: #044596;
        color: white;
        padding:10px 15px;
        border-radius: 5px;
        font-weight: bold;
        font-size: 18px;
        position: relative;
        z-index: 100;
        display: inline;
    }

    .explanation {
        background-color: #E7EFF2;
        margin: 20px 20px 10px 20px;
        border-radius: 10px;
    }

    .explanation-label {
        padding:20px;
        text-align: left;
        font-size: 13px;
    }

    #avatar {
        width: 113%;
        height: 118px;
        position: relative;
        top: 0px;
        left: 24px;
    }

    #avatar img {
        margin-top: -60px;
        pointer-events: none;
    }

    .answer-description {
        border:1px solid #15519D;
        border-radius:8px;
        padding:10px 10px;
        margin:30px 10px 30px 10px;
    }

    #answer-correct-icon{
        position: absolute;
        top:0;
        left:0;
        opacity: 0;
    }

    .header-explanation-label {
        margin-left: 13px;
        margin-right: 13px;
        margin-top: 30px;
    }

    .explanation-description{
        font-size: 15px;
    }


    @media (max-width: 500px) {

        .explanation-label{
            padding: 10px;            
        }

        .header-explanation-label {
            margin-top: 0px;
        }

        .explanation-description{
            font-size: 13px;
        }

        .explanation{
            margin: 20px 10px 10px 10px;
        }
    }

</style>