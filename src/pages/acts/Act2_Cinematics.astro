---
import Avatar from "../../components/avatar/Avatar.astro";

interface Props {
	step: string;
}

const { step } = Astro.props;
---
<div class="act-cinematics-wrapper">
    <div class="act-cinematics-center"> 
        <div class="act-cinematics-holder">
            <div class="speech">
                <div class="speech-bubble">
                    <div class="speech-bubble-text">
                        <div id="speech-content-act-1" class="speech-bubble-text-content">
                            Nice to meet you IÃ±aki, I think you can be the perfect addition to the team
                        </div>
                    </div>                    
                </div>
                <img id="speech-bubble-wedge" src="./imgs/acts/speech/speech-wedge.png">
                <a id="content-cinematic-act-1-button" class="speech-bubble-button" href="#"><div class="speech-loading"><img src="./imgs/acts/speech/speech-loading.gif"></div></a>
            </div>
            <img class="act-cinematics-background-image" src="./imgs/acts/titles/title-I-Background.png">
        </div>
        <div class="characters">
            <div id="speech-user-avatar">
                <Avatar isSpeech={true} width={170} step={step}/>
            </div>
            <img class="character-image" id="sarah" src="./imgs/characters/sarah-speech.png">
            <img class="character-image" id="rafael" src="./imgs/characters/rafael-speech.png">
        </div>
    </div>
</div>
<style>
    /* SPEECH */
    .speech {
        position: absolute;
        width: 100%;
        top: -16%;
    }

    .speech-bubble {
        width: 62%;
        height: 150px;
        margin: auto;
        background-color: #EAEFF7;
        padding: 10px 20px;
        border: 2px solid #054696;
        /* drop hard shadow */
        box-shadow: 5px 5px 0px 0px rgb(0 0 0 / 75%);
    }
    .speech-loading {
        background-color: #00A5DC;
        width: 100px;
        padding: 17px 10px;
        margin: 0 auto;
        border-radius: 7px;
        border: 2px solid white;
        margin-top: -57px;
    }

    #speech-bubble-wedge {
        margin-top: -2px;
        transform: translateX(110px);
        
    }

    .speech-bubble-text {
        height: 100%;
        margin: auto;
        display: flex;
    }

    .speech-bubble-text-content {
        margin: auto;
    }

    .speech-loading img{
        width: 100px;
        margin-top: 10px;
    }

    .speech-bubble-button {
        display: contents;
    }


    /*  OTHER */
    .characters > #speech-user-avatar {
        position: absolute;
        top: 53%;
        left: 1%;
        z-index: 100;
    }

    .act-cinematics-wrapper {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        flex-direction: column;
        color:#054696;
        font-size: 22px;
        /*margin:20px 0px;*/
        font-family: 'Roboto', sans-serif;
        text-align: center;
    }

    .act-cinematics-center {
        position: relative;
        margin: auto 0;
    }

    .act-cinematics-background-image{
        width: 100%;
    }

    .characters {
        position: absolute;
        pointer-events: none;
        top: 0px;
        width: 100%;
        height: 100%;
    }

    .character-image{
        width: 130px;
        position: absolute;
    }

    #sarah {
        top: 62%;
        left: 23%;
        transform: scaleX(-1);
    }

    #rafael {
        top: 58%;
        left: 66%;
    }
</style>